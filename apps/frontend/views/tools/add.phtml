						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<script>
$(function(){
	$("#yes").click(function(){
		var val = $(this).val();
		if(val==0){
			$(this).val(1)
		}else{
			$(this).val(0);
		}
	});
	$("#methods").submit(function(){
		var url = $(this).attr("action");
		$.ajax({
			url:url,
			type:'post',
			dataType:"json",
			data:$(this).serialize(),
			success:function(data){
				alert(data.msg);
				window.location.reload();
			},
			error:function(){
				alert("网络错误");
			}
		});
		return false;
	})
})

</script>