<div class="row">
	<div class="col-sm-12">
		<div class="ibox float-e-margins">
			<div class="ibox-title">
				<h5>
					所有表单元素 <small>包括自定义样式的复选和单选按钮</small>
				</h5>

			</div>
			<div class="ibox-content">
				<form method="post" id="methods"
					action="<?php echo $this->url->get("/frontend/tools/add");?>"
					class="form-horizontal">
					<input type="hidden" name="pid" value="<?php echo $pid;?>" />
					<div class="form-group">
						<label class="col-sm-2 control-label">方法名</label>

						<div class="col-sm-3">
							<input type="text" name="method" class="form-control"
								placeholder="请输入控制器名">
						</div>
					</div>
					<div class="hr-line-dashed"></div>

					<div class="form-group">
						<label class="col-sm-2 control-label">别名</label>

						<div class="col-sm-3">
							<input type="text" name="alias" class="form-control"
								placeholder="请输入控制器别名">
						</div>
					</div>
					<div class="hr-line-dashed"></div>

					<div class="form-group">
						<label class="col-sm-2 control-label"></label>

						<div class="col-sm-10">
							<div class="checkbox">
								<label> <input type="checkbox" name="show" id="yes" value="0">是否显示
								</label>
							</div>
						</div>
					</div>
					<div class="hr-line-dashed"></div>

					<div class="form-group">
						<div class="col-sm-4 col-sm-offset-2">
							<button class="btn btn-primary" type="submit">保存内容</button>
